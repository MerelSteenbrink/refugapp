<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="chatbox">
        <h1 class= "form-title">Your Chat</h1>
<!-- col-xs-12 col-lg-6 col-lg-offset-3 chatblock
-->
<div class="chat">
  <ul>
    <li>
      <div class="msg">
        <b><%= User.find(@request.messenger_id).title %>:</b></p>
        <p> <%= @request.message %></p>
      </div>
    </li>
    <% @chat_messages.each do |chat_message| %>
      <% if chat_message.user_id == current_user.id %>
    <li class= "you">
      <div class ="msg bubble-right">
          <p><b>You:</b></p>
          <p><%= chat_message.content %></p>
      </div>
    </li>
      <% else %>
      <li class= "other">
      <div class="msg bubble-left">
        <p><b><%= User.find(chat_message.user_id).title %>:</b></p>
        <p><%= chat_message.content %></p>
      </div>
    </li>
      <% end %>
    <% end %>
  </ul>
</div>
<%= simple_form_for [@request, @chat_message], url: post_request_chat_messages_path, html: {method: :post } do |f| %>
<%= f.full_error :unlock_token %>

<div class="form_inputs">
  <%= f.input :content, autofocus: true, placeholder: 'Your message', label: false%>
</div>
<%= f.submit %>
<% end %>

<%= link_to 'Back', dashboard_root_path %>
</div>
</div>
</div>
</div>
