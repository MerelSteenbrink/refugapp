<div class="wrapper">
  <div class="form">
    <h3 class="form-title">SIGN UP </h3>
    <div class="profile-info">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username, required: true, autofocus: true, placeholder: 'username', label: false %>
        <%= f.input :first_name, required: true, placeholder: 'first name', label: false  %>
        <%= f.input :last_name, required: true, placeholder: 'last name', label: false  %>
        <p>I am a:
          <div class="radio-buttons">
            <%= f.collection_radio_buttons :kind, [['dutchie', 'dutchie'] ,['refugee', 'refugee']],:first, :last, required: true %>
          </div>
        </p>
        <%= f.input :description, placeholder: 'write something about yourself', required: true, label: false  %>
        <%= f.input :city, required: true, placeholder: 'city', label: false %>
        <%= f.input :email, required: true, placeholder: 'e-mail', label: false  %>
        <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation %>
        <div class="upload-preview">
          <img class="hidden photo-preview preview-image"/>
        </div>

        <div class="input-file-container">
          <%= f.input :photo, input_html: {class: "file input-file hidden"}, name: "photo"  %>
          <label for="my-file" class="input-file-trigger btn form-button" tabindex="0">select picture</label>
        </div>
        <%= f.input :photo_cache, as: :hidden  %>
        <%= f.submit class: "form-button", value: "SIGN UP" %>
        <% end %>
      </div>
  </div>
</div>
