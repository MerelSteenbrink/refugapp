<div class="wrapper">
  <div class="form">
    <h3 class="form-title">New Post</h3>
    <%=  simple_form_for [@post] do |f| %>
    <%= f.input :subject, placeholder: "Subject", label: false %>
    <%= f.input :content, placeholder: "Write your post here", label: false%>
    <%= f.input :city, input_html: {value: current_user.city || ""}, label: false %>
    <%= f.input :postal_code, placeholder: "Postalcode (1234AZ)", label: false %>
    <%= f.input :category, placeholder: "Choose a category", label:false %>

    <%= f.submit class: "form-button"  %>

    <% end %>
  </div>
</div>

