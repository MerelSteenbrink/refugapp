<div class="wrapper-stories">
  <div class="stories-underline">
    <span class="stories-title">Shared Stories</span>
  </div>
  <div class="container">
    <div class="row">
    <% @shared_stories.reverse.each do |story| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="stories-card">
        <div class="stories-underline-blue">
         <span class="stories-title"> <%= story.title %></span></div> <br>
        <div class="stories-story">
        <%= truncate(story.story, :length => 120) %>
        <% if story.story.length > 120 %>
          <%= link_to "read more", shared_story_path(story)   %>
        <% end %>

        </div> <br>
        <div class="stories-images">
          <%= cl_image_tag story.author.full_picture, class: "avatar" %>
        <%= link_to story.author.title, user_path(story.author) %>
         <%= cl_image_tag story.member.full_picture, class: "avatar"%>
         <%= link_to story.member.title, user_path(story.member) %> <br>
        </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <% if current_user %>
  <div class="stories-center">
  <%= link_to "Write a story", new_shared_story_path, class: "hvr-sweep-to-right btn-blue"  %>
  </div>
  <% end %>
</div>
