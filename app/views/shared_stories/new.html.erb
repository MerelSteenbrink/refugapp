<div class="wrapper">
  <h1>Write a story</h1>
  <p>
    <%=  simple_form_for [@story] do |f| %>

    <% if @story.errors.any? %>
    <div class="alert alert-warning"> <%= @story.errors.messages.first[1].join %> </div>
    <% end %>

    <%= f.input :title %>
    <%= f.input :story %>
    <%= f.collection_select :member_id, current_user.connections, :id, :title %>
    <%= f.submit %>

    <% end %>
  </p>

</div>

